# Environment Configuration for Smile Adventure
# Copy this file to .env and update the values for Docker Compose

# Application Settings
APP_NAME=Smile Adventure
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=production

# Database Configuration (for Docker Compose)
POSTGRES_DB=smile_adventure
POSTGRES_USER=smile_user
POSTGRES_PASSWORD=your_secure_password_here_change_this
DATABASE_URL=postgresql://smile_user:your_secure_password_here_change_this@postgres:5432/smile_adventure

# Database Configuration (for local development)
# DATABASE_URL=postgresql://smileuser:smilepass123@localhost:5432/smile_adventure

# Security Settings
SECRET_KEY=your-super-secret-key-change-this-in-production-please
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings (comma-separated URLs)
ALLOWED_HOSTS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:3000,http://127.0.0.1:8000

# External API Keys (optional)
OPENAI_API_KEY=
